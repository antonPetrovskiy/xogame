<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="126dp"
    android:background="@drawable/bggradient"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_frame"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="38dp"
            android:layout_height="18dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dialog_left"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="38dp"
            android:layout_height="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dialog_right"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Exit?"
            android:textColor="#586575"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/oval_line_orange"
                android:text="@string/popup_no"
                android:textColor="#F08C3C" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"

                android:background="@drawable/oval_elipse_orange"
                android:text="@string/popup_yes" />

        </LinearLayout>







    </android.support.constraint.ConstraintLayout>



</LinearLayout>