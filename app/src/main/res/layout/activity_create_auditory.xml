<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradient"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.game.xogame.views.create.CreateAuditoryActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/linearLayout55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/setting_back"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="@string/activityCreate_auditory"
                android:textAlignment="center"
                android:textColor="#2F3542"
                android:textSize="16dp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/button4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/setting_save"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/profile_line"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout5">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/activitySetting_country"
                android:textColor="#586575"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/editText1"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:backgroundTint="#586575"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#2F3542"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/activitySetting_city"
                android:textColor="#586575"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/editText2"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:backgroundTint="#586575"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#2F3542"
                android:textSize="16dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/profile_line_grey"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/activityCreate_address"
                android:textColor="#2F3542"
                android:textSize="14dp" />

            <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/activityCreate_oblast"
            android:textColor="#586575"
            android:textSize="12dp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:backgroundTint="#586575"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="#2F3542"
                android:textColorHint="#586575"
                android:textSize="16dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/activityCreate_rayon"
                android:textColor="#586575"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:backgroundTint="#586575"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="#2F3542"
                android:textColorHint="#586575"
                android:textSize="16dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/activityCreate_street"
                android:textColor="#586575"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:backgroundTint="#586575"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="#2F3542"
                android:textColorHint="#586575"
                android:textSize="16dp"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/activityCreate_house"
                android:textColor="#586575"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:backgroundTint="#586575"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="#2F3542"
                android:textColorHint="#586575"
                android:textSize="16dp"
                tools:ignore="Autofill,LabelFor" />


            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:indeterminate="false"
                android:padding="10dp"
                android:progress="50"
                android:progressDrawable="@drawable/seek_bar"
                android:splitTrack="false"
                android:thumb="@drawable/icon_thumb"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal"
                android:text="50 km"
                android:textColor="#586575"
                android:textSize="12dp" />





    </LinearLayout>
    </TableLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
