<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradient"
    tools:context="com.game.xogame.views.game.WinActivity">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:text="@string/activityWin_win"
            android:textAlignment="center"
            android:textColor="#2F3542"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"

            android:scaleType="fitXY"
            android:src="@drawable/profile_line"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="7dp"
                android:clipToPadding="false"
                android:elevation="3dp"
                android:scaleType="centerCrop"
                app:cardBackgroundColor="#DFE4EA"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:scaleType="centerCrop"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/textHolder1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="13dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_vertical"
                        android:textColor="#2F3542"
                        android:textSize="12dp"
                        tools:text="TextView" />

                    <TextView
                        android:id="@+id/textView04"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_vertical"
                        android:text="@string/activityRatingHistory_ended"
                        android:textAlignment="viewEnd"
                        android:textColor="#2F3542"
                        android:textSize="12dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView02"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="#57606F"
                    android:textSize="12dp"
                    tools:text="TextView" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layUser1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game">

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:clipToPadding="false"
            android:elevation="18dp"
            android:scaleType="centerCrop"
            app:cardBackgroundColor="#DFE4EA"
            app:cardCornerRadius="40dp"
            app:cardElevation="2dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:clipToPadding="false"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textHolder2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_horizontal"
            android:textColor="#2F3542"
            android:textSize="14dp"
            tools:ignore="NestedWeights"
            tools:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/oval_line_rating"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="10">

            <ProgressBar
                android:id="@+id/bar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:adjustViewBounds="true"
                android:max="1000"
                android:progressDrawable="@drawable/progress"
                tools:ignore="NestedWeights"
                tools:progress="600" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:textColor="#80586575"
                android:textSize="10dp"
                tools:ignore="Smalldp"
                tools:text="19/20" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layUser1">


        <ImageView
            android:id="@+id/imageView666"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/oval_grey"
            android:cropToPadding="true"
            android:padding="15dp"
            app:srcCompat="@drawable/mywin"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#F05A23"
            android:textSize="16dp"
            tools:text="3000 грн" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bggradient"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:text="@string/activityMyWins_sent"
            android:textAlignment="center"
            android:textColor="#586575"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bggradient"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:text="@string/activityMyWins_mobile"
            android:textAlignment="center"
            android:textColor="#586575"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bggradient"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:text="@string/activityMyWins_card"
            android:textAlignment="center"
            android:textColor="#586575"
            android:textSize="16dp" />


    </LinearLayout>

    <Button
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/registration_button_view"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/activityWin_later"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/targetView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.4">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation"
            android:layout_width="155dp"
            android:layout_height="155dp"
            app:lottie_autoPlay="false"
            app:lottie_imageAssetsFolder="airbnb/"
            app:lottie_loop="false" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
