<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="123dp"
    android:background="@drawable/mygame_bg"
    android:clipToPadding="false"
    android:elevation="4dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bggradientreverse"
        android:elevation="2dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clipToPadding="false"
            android:elevation="18dp"
            android:scaleType="centerCrop"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="25dp"
            app:cardElevation="1dp">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clipToPadding="false"
                android:scaleType="centerCrop"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/textHolder1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18dp" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                tools:text="TextView"
                android:textColor="#2F3542"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="top"
                android:maxLines="1"
                tools:text="TextView"
                android:textColor="#57606F"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/name4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:maxLines="1"
                tools:text="TextView"
                android:textColor="#9EA4AC"
                android:textSize="10dp"
                tools:ignore="Smalldp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bot"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/top"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/bggradient"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#57606F"
            android:textSize="12dp"
            tools:text="TextView" />
        <TextView
            android:id="@+id/name5"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#BE3C28"
            android:textSize="12dp"
            android:text="@string/layoutMywins_moderation"
            tools:ignore="RelativeOverlap" />


    </RelativeLayout>

</RelativeLayout>