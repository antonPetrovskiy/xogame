<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:id="@+id/main"
    android:background="@drawable/plate_bg"
    android:elevation="2dp"
    android:clipToPadding="false"
    android:orientation="vertical">



    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/shadow"
        android:elevation="2dp"
        android:id="@+id/top"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clipToPadding="false"
            android:elevation="18dp"
            android:scaleType="centerCrop"
            app:cardElevation="2dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#DFE4EA">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clipToPadding="false"
                android:scaleType="centerCrop"
                app:riv_oval="true" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#2F3542"
                android:fontFamily="@font/roboto_medium"
                android:text="TextView" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="top"
                android:text="TextView"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#57606F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="TextView"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:textColor="#9EA4AC"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:id="@+id/bot"
        android:layout_below="@+id/top"
        android:orientation="horizontal"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="47">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/flag_south_korea" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="53"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="#57606F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/name5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="#57606F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/name6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="#57606F"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/bot"
        android:layout_alignBottom="@+id/bot"
        android:layout_alignParentBottom="true"
        android:src="@drawable/game_plaing" />

</RelativeLayout>