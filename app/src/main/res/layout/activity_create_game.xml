<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradient"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.game.xogame.views.create.CreateGameActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/linearLayout55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/icon_delete"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="@string/activityCreate_create"
                android:textAlignment="center"
                android:textColor="#2F3542"
                android:textSize="16dp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/game_plaing"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/profile_line"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout5">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/activityCreate_name"
            android:textColor="#586575"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:backgroundTint="#586575"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:scrollbars="vertical"
            android:textColor="#2F3542"
            android:textSize="16dp"
            tools:ignore="Autofill,LabelFor" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="12dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/unknow_creategame" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/activityCreate_description"
            android:textColor="#586575"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:backgroundTint="#586575"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColor="#2F3542"
            android:textSize="16dp"
            tools:ignore="Autofill,LabelFor" />


        <RelativeLayout
            android:id="@+id/addAuditory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bggradient"
            android:minHeight="49dp">

            <ImageView
                android:id="@+id/imageView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/menu_line"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_below="@+id/imageView01"
                android:layout_gravity="center_vertical"
                android:background="@drawable/task_bg_orange"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:text="@string/activityCreate_auditory"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/layAuditory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/icon_map_grey"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textViewAuditory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="36dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="2"
                    android:paddingStart="21dp"
                    android:textColor="#ABB2BA"
                    android:textSize="12dp"
                    tools:text="ул.Хорива 23, Киев 04071, Украинаул.Хорива 23, Киев 04071, Украина" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewPlus1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:src="@drawable/icon_add"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bggradient"
            android:minHeight="49dp">

            <ImageView
                android:id="@+id/imageView03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/menu_line"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_below="@+id/imageView03"
                android:layout_gravity="center_vertical"
                android:background="@drawable/task_bg_orange"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:text="@string/activityCreate_category"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/layCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/icon_category_grey"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textViewCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="36dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="2"
                    android:paddingStart="21dp"
                    android:textColor="#ABB2BA"
                    android:textSize="12dp"
                    tools:text="ул.Хорива 23, Киев 04071, Украинаул.Хорива 23, Киев 04071, Украина" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewPlus3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:src="@drawable/icon_add"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bggradient"
            android:minHeight="49dp">

            <ImageView
                android:id="@+id/imageView0001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/menu_line"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_below="@+id/imageView0001"
                android:layout_gravity="center_vertical"
                android:background="@drawable/task_bg_orange"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:text="@string/activityCreate_task"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/layTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/game_icon_tasks"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textViewTasks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:paddingStart="21dp"
                    android:textColor="#ABB2BA"
                    android:textSize="12dp"
                    tools:text="20 заданий" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="67dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/game_icon_money"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textViewReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:paddingStart="21dp"
                    android:textColor="#ABB2BA"
                    android:textSize="12dp"
                    tools:text="1000 грн" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewPlus2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:src="@drawable/icon_add"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/profile_line_grey"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/activityCreate_info"
                android:textColor="#9EA4AC"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/imageView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/activityCreate_howCreate"
                android:textColor="#F08C3C"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText2"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/registration_button_view"
                android:text="@string/activityCreate_pay"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </LinearLayout>

    </TableLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/targetView"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <com.airbnb.lottie.LottieAnimationView

            android:layout_width="159dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="activityindicator.json"
            app:lottie_imageAssetsFolder="airbnb/"
            app:lottie_loop="true" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
