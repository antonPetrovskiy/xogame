<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.game.xogame.views.create.CreatedFeedsActivity">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bggradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingLeft="17dp"
                android:paddingTop="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="17dp"
                android:scaleType="fitStart"
                android:src="@drawable/setting_back"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="#2F3542"
                android:textSize="16dp"
                tools:text="text"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/profile_line"
            tools:ignore="ContentDescription"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/bggradient"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/unknow_wide"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="16dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/game_icon_date"
                                tools:ignore="ContentDescription"/>

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="16dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/game_icon_tasks"
                                tools:ignore="ContentDescription"/>

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="16dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/icon_users_orange"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="6dp"
                                android:paddingTop="6dp"
                                android:maxLines="1"
                                android:textColor="#2F3542"
                                android:textSize="14dp"
                                android:fontFamily="@font/roboto_medium"
                                tools:text="21.12.12-21.12.121212121212122128767676767671212121" />

                            <TextView
                                android:id="@+id/textView29"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="6dp"
                                android:paddingTop="6dp"
                                android:textColor="#2F3542"
                                android:textSize="14dp"
                                android:fontFamily="@font/roboto_medium"
                                tools:text="20 заданий" />

                            <TextView
                                android:id="@+id/textView31"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="6dp"
                                android:paddingTop="6dp"
                                android:textColor="#F08C3C"
                                android:textSize="14dp"
                                android:fontFamily="@font/roboto_medium"
                                tools:text="1232 человек" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="16dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/game_icon_time"
                                tools:ignore="ContentDescription"/>

                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_width="16dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/game_icon_money"
                                tools:ignore="ContentDescription"/>

                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_width="16dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/icon_category_orange"
                                tools:ignore="ContentDescription"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView32"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="6dp"
                                android:paddingTop="6dp"
                                android:textColor="#2F3542"
                                android:textSize="14dp"
                                android:fontFamily="@font/roboto_medium"
                                tools:text="12:00 - 15:00" />

                            <TextView
                                android:id="@+id/textView33"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="6dp"
                                android:paddingTop="6dp"
                                android:textColor="#2F3542"
                                android:textSize="14dp"
                                android:fontFamily="@font/roboto_medium"
                                tools:text="1000 uah" />
                            <TextView
                                android:id="@+id/textView34"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="6dp"
                                android:paddingTop="6dp"
                                android:textColor="#F08C3C"
                                android:textSize="14dp"
                                android:fontFamily="@font/roboto_medium"
                                tools:text="Игры" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#2F3542"
                    android:textSize="14dp"
                    tools:text="When President Donald Trump first tried to stop citizens from seven predominantly Muslim countries from entering the United States, he cited the Sept. 11 terrorist attacks as his rationale. Yet none of the men behind those attacks hailed from these countries. In fact, a Cato Institute analysis shows that between 1975 and 2015 no one from these countries killed a single American in a U.S. terrorist attack." />

                <LinearLayout
                    android:id="@+id/layMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView140"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/icon_map"
                        tools:ignore="ContentDescription"/>

                    <TextView
                        android:id="@+id/textView303"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text=""
                        android:textColor="#f08c3c"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>



            <ListView
                android:id="@+id/gamelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout6"
                android:background="@drawable/bggradient"
                android:clipToPadding="false"/>
        </RelativeLayout>



    </ScrollView>

    <LinearLayout
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:id="@+id/targetView"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView

            android:layout_width="159dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="activityindicator.json"
            app:lottie_imageAssetsFolder="airbnb/"
            app:lottie_loop="true" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55">


        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="159dp"
            android:layout_height="159dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/empty"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageView23"
            android:layout_alignBottom="@id/imageView23"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/fragmentFeeds_noTasks"
            android:textAlignment="center"
            android:textColor="#80586575"
            android:textSize="16dp" />


    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
